<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/teal_700"
    tools:context=".NoteDescriptionFragment">


    <Button
        android:id="@+id/note_description_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/note_field_margin"
        android:layout_marginStart="@dimen/note_field_margin"
        android:text="@string/note_description_button_back_text"
        android:textSize="@dimen/note_name_text_size" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/note_field_margin"
        android:layout_weight="1"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_200"
            android:hint="@string/name"
            android:textColorHint="@color/black"
            android:inputType="textPersonName"

            android:textSize="@dimen/note_name_text_size" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/note_field_margin"
        android:layout_weight="10"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/design_default_color_surface"
            android:hint="@string/description"
            android:textColorHint="@color/black"
            android:textSize="@dimen/note_description_text_size"
            android:inputType="text"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/note_field_margin"
        android:layout_weight="1"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/design_default_color_secondary"
            android:hint="@string/date"
            android:textColorHint="@color/black"
            android:textSize="@dimen/note_date_text_size"
            android:inputType="date"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>